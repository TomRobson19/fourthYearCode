\begin_deeper
\begin_layout Enumerate
Given that
\begin_inset Formula $\frac{1}{2}\lvert0\rangle-\frac{\sqrt{3}}{2}\lvert1\rangle$
\end_inset

 is being measured in the standard basis, the probability of measuring a
 
\begin_inset Formula $\lvert0\rangle$
\end_inset

 is 
\begin_inset Formula $\frac{1}{2}^{2}=\frac{1}{4}$
\end_inset

, while the probability of measuring a 
\begin_inset Formula $\lvert1\rangle$
\end_inset

 is 
\begin_inset Formula $\frac{\sqrt{3}}{2}^{2}=\frac{3}{4}$
\end_inset

.
 These are the only two possible measured states as measurement is being
 done relative to the standard basis, and their probability is given by
 the square of the magnitude of the direction of each possible state.
 
\end_layout

\begin_layout Enumerate
Given that
\begin_inset Formula $\frac{3i}{4}\lvert+\rangle-\frac{\sqrt{7}}{4}\lvert-\rangle$
\end_inset

 is being measured in the standard basis, the probability of measuring a
 
\begin_inset Formula $\lvert0\rangle$
\end_inset

 is 
\begin_inset Formula $\lvert\frac{3i-7}{4\sqrt{2}}\rvert=\frac{1}{2}$
\end_inset

, while the probability of measuring a 
\begin_inset Formula $\lvert1\rangle$
\end_inset

 is 
\begin_inset Formula $\lvert\frac{3i+7}{4\sqrt{2}}\rvert=\frac{1}{2}$
\end_inset

.
\begin_inset Formula 
\[
\frac{3i}{4}\lvert+\rangle-\frac{\sqrt{7}}{4}\lvert-\rangle=\frac{3i}{4\sqrt{2}}(\lvert0\rangle+\lvert1\rangle)-\frac{\sqrt{7}}{4\sqrt{2}}(\lvert0\rangle-\lvert1\rangle)
\]

\end_inset


\begin_inset Formula 
\[
\frac{3i}{4}\lvert+\rangle-\frac{\sqrt{7}}{4}\lvert-\rangle=\frac{3i}{4\sqrt{2}}(\lvert0\rangle+\lvert1\rangle)-\frac{\sqrt{7}}{4\sqrt{2}}(\lvert0\rangle-\lvert1\rangle)
\]

\end_inset


\begin_inset Formula 
\[
\frac{3i}{4}\lvert+\rangle-\frac{\sqrt{7}}{4}\lvert-\rangle=\frac{3i-\sqrt{7}}{4\sqrt{2}}\lvert0\rangle+\frac{3i+\sqrt{7}}{4\sqrt{2}}\lvert1\rangle
\]

\end_inset


\begin_inset Formula 
\[
\lvert\frac{3i-\sqrt{7}}{4\sqrt{2}}\rvert^{2}=(\frac{-\sqrt{7}}{4\sqrt{2}})^{2}+(\frac{3}{4\sqrt{2}})^{2}=\frac{7}{32}+\frac{9}{32}=\frac{1}{2}
\]

\end_inset


\begin_inset Formula 
\[
\lvert\frac{3i+\sqrt{7}}{4\sqrt{2}}\rvert^{2}=(\frac{\sqrt{7}}{4\sqrt{2}})^{2}+(\frac{3}{4\sqrt{2}})^{2}=\frac{7}{32}+\frac{9}{32}=\frac{1}{2}
\]

\end_inset


\end_layout

\begin_layout Enumerate
Given that
\begin_inset Formula $\frac{1}{\sqrt{2}}(\lvert1\rangle-\lvert0\rangle)$
\end_inset

 is being measured in the Hadamard basis, the probability of a 
\begin_inset Formula $\lvert+\rangle$
\end_inset

